byte n = 0, finish = 0;

active proctype P() {

	byte temp = 0;
	byte counter = 0;
	
	do 
	:: counter == 2 -> break
 	:: else ->
 		temp = n;
 		temp++;
 		n = temp;
 		counter++
 	od;
	finish++
}

active proctype Q() {
 	
	byte count = 0;

	do
	:: count == 2 -> break
	:: else ->
		n++;
		count++
	od;
	finish++
}

never {

	finish = 4;
	n<4;

}
